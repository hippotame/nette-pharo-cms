<!doctype html>
<html lang="en-US">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
        <title>Smarty Admin</title>
        <meta name="description" content="" />
        <meta name="Author" content="Dorin Grigoras [www.stepofweb.com]" />

        <!-- mobile settings -->
        <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0" />

        <!-- WEB FONTS -->
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700,800&amp;subset=latin,latin-ext,cyrillic,cyrillic-ext" rel="stylesheet" type="text/css" />

        <!-- CORE CSS -->
        <link href="/pharo/admin/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />

        <!-- THEME CSS -->
        <link href="/pharo/admin/assets/css/essentials.css" rel="stylesheet" type="text/css" />
        <link href="/pharo/admin/assets/css/layout.css" rel="stylesheet" type="text/css" />
        <link href="/pharo/admin/assets/css/color_scheme/green.css" rel="stylesheet" type="text/css" id="color_scheme" />

    </head>
    <!--
            .boxed = boxed version
    -->
    <body>


        <div class="padding-15">

            <div class="login-box">
                <!-- login form -->
                {form signIn}
                    <header><i class="fa fa-users"></i> Sign In</header>
                    <section class="flashmessages" n:if="count($flashes)>0">
                        <div n:foreach="$flashes as $flash" class='alert alert-{$flash->type} noborder text-center weight-400 nomargin noradius'>
                            <strong>{$flash->message}</strong>
                        </div>
                    </section>
                    <fieldset>	
                        <section>
                            <label class="label">Login</label>
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                {input user_login}
                                <span class="tooltip tooltip-top-right">UserName</span>
                            </label>
                        </section>
                        <section>
                            <label class="label">Password</label>
                            <label class="input">
                                <i class="icon-append fa fa-lock"></i>
                                {input user_pass}
                                <b class="tooltip tooltip-top-right">Type your Password</b>
                            </label>
                            <label class="checkbox"><input id="frm-signIn-remember" type="checkbox" name="checkbox-inline" checked><i></i>Keep me logged in</label>
                        </section>
                    </fieldset>
                    <footer>
                        <button type="submit" class="btn btn-primary pull-right">Sign In</button>
                    </footer>
                {/form}
                <!-- /login form -->
            </div>

        </div>

        <!-- JAVASCRIPT FILES -->
        <script type="text/javascript">var plugin_path = '/pharo/assets/plugins/';</script>
        <script type="text/javascript" src="/pharo/admin/assets/plugins/jquery/jquery-2.1.4.min.js"></script>
        <script type="text/javascript" src="/pharo/admin/assets/js/app.js"></script>
    </body>
</html>